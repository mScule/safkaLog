<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.IngredientsActivity">

    <TextView
        android:id="@+id/activity_ingredients_label_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        android:text="@string/shared_label_name"
        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_ingredients_input_name"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_ingredients_label_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activity_ingredients_label_kcal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        android:text="@string/shared_label_kcal"
        android:textSize="24sp"

        app:layout_constraintTop_toBottomOf="@id/activity_ingredients_input_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_ingredients_input_kcal"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:inputType="number"

        app:layout_constraintTop_toBottomOf="@id/activity_ingredients_input_name"
        app:layout_constraintStart_toEndOf="@id/activity_ingredients_label_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/activity_ingredients_button_add"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:textAllCaps="false"
        android:text="@string/shared_button_add"

        android:onClick="addIngredient"

        app:layout_constraintTop_toBottomOf="@id/activity_ingredients_input_kcal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>